generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  name        String
  email       String      @unique
  password    String
  emailVerified DateTime?
  moods       Mood[]
  sessions    Session[]
  verifications Verification[]
  createdAt   DateTime    @default(now())
}

model Session {
  id             String   @id @default(uuid())
  userId         String
  refreshToken   String?   @unique
  expiredAt      DateTime
  user           User     @relation(fields: [userId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  @@index([userId])
}

model Verification {
  id          String       @id @default(uuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  token       String       @unique
  type        VerificationType
  expiredAt   DateTime
  verifiedAt  DateTime?
  createdAt   DateTime     @default(now())

  @@index([userId])
}

enum VerificationType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}


model Mood {
  id          String    @id @default(uuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  date        DateTime
  moodScore   Int
  moodLabel   MoodLabel
  notes       String?   @db.Text
  embedding   Unsupported("vector(1536)")
  createdAt   DateTime  @default(now())

  @@unique([userId, date])
  @@index([userId])
}


enum MoodLabel {
  HAPPY
  SAD
  ANGRY
  STRESSED
  CALM
  EXCITED
  TIRED
}
