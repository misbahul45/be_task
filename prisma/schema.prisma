generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  moods     Mood[]
  createdAt DateTime @default(now())
}

model Mood {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  date       DateTime
  moodScore  Int       @db.TinyInt
  moodLabel  MoodLabel
  notes      String?   @db.Text
  createdAt  DateTime  @default(now())

  @@unique([userId, date])
  @@index([userId])
}

enum MoodLabel {
  HAPPY
  SAD
  ANGRY
  STRESSED
  CALM
  EXCITED
  TIRED
}

